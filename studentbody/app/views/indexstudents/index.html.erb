<div id="page">
  <header id="header">
    <div class="center">
      <nav id="main-menu">
        <ul>
          <li class="site-title"><a href="index.html">Students @ Flatiron School</a></li>
        </ul>
        <ul>
          <li><a href="http://flatironschool.com">More about Our School</a></li>
        </ul>
      </nav>
      <div class="clear"></div>
    </div>
  </header>

  <section id="about" class="about-us content">
    <div class="center">
      <h1 id="intro" style="padding-top: 20px">
        Every story has heroes. We're 20 people on a journey to learn to love code.
      </h1>
      <!-- <h2 class="title"><span>The Heroes</span></h2> -->
      <div class="columns">

        <% @indexstudents.each_with_index do |student, index|  %>

        <div class="one_third <%= "last" if (index + 1) % 3 == 0 %>">
          <a href="/<%= "#{student.first_name}-#{student.last_name}" %>"><img class="person" src="assets/<%= student.image_url %>" alt="<%= "#{student.first_name} #{student.last_name}" %>"/>
            <div class="name-position">
              <h2><%= "#{student.first_name} #{student.last_name}" %></h2>
              <div class="position"><%= student.tagline %></div>
            </div>
            <div class="clear"></div>
          </a>
          <p class="excerpt"><%= student.excerpt.strip %></p>
        </div>

        <% end %>

        

        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
    <!-- /END .center-->
  </section>
  <!-- /END #about-us -->


   <section id="copyright" class="footer content">
    <div class="center">
      <p>&copy; 2012. All Your Rights Are Belong To Us.</p>
      <div class="clear"></div>
    </div>
  </section>
</div>
